<h1>Dashboard</h1>

<a href="/posts/new">Add New Post</a>


<table class="table table-sm table-striped table-hover table-condensed table-bordered">
  <thead>
  <tr>
    <th>Favorited Posts</th>
  </tr>
  </thead>
  <tbody>
  <% current_user.fav_posts.each do |fp| %>
      <tr>
        <td>
          <a href="/posts/<%= fp.id %>">
            <%= fp.title %>
          </a>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<table class="table table-striped table-hover table-condensed table-bordered">
  <thead>
  <tr>
    <th>Authored Posts</th>
  </tr>
  </thead>
  <tbody>
  <% @user_posts.each do |post| %>
      <tr>
        <td>
          <a href="/posts/<%= post.id %>">
            <%= post.title %>
          </a>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
