<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Created</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |p| %>
      <tr>
        <td>
          <!-- <%= link_to p.title, "/posts/#{p.id}" %> -->
          <a href="/posts/<%= p.id %>">
            <%= p.title %>
          </a>
        <td>
          <%= p.body %>
        </td>
        </td>
        <td><%= p.created_at %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @posts %>